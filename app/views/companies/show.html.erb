<div class="container" style="margin-top: 110px;">
  <div class="row">
    <div class="col-md-9">
      <%= render @jobs %>
    </div>
    <div class="col-md-3">
      <div class="row">
        <strong>
          TOP COMPANIES
        </strong>
      </div>
      <% @companies.each do |company| %>
        <div class="row">
          <h4><%= link_to "#{company.name}", company %></h4>
        </div>
      <% end %>
    </div>
  </div>
  <p>
    <h4><%= link_to 'Back', jobs_path %></h4>
  </p>
</div>
